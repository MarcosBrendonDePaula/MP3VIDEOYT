<div class="container">
    <form action="/download/{{video.videoDetails.videoId}}/format" method="post">

        <h2>Choose your quality</h2>

        <!--Load all the valids formats-->
        {{#each video.formats}}
            {{#if (compare_strings ./container 'mp4')}}
                <div>
                    <input type="radio" name="itag" value="{{itag}}">
                    <label for="choice1">{{quality}} - {{./container}} - {{mimeType}} - {{contentLength}} bytes - <a href="{{url}}">link</a> - {{itag}}</label>
                </div>
            {{else}}
            {{/if}}
        {{else}}
        {{/each}}

        <button type="submit" class="btn btn-primary">Download</button>
        
    </form>
</div>